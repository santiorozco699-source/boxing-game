<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Simple Boxing Game</title>
  <style>
    body {
      background: #222;
      color: white;
      text-align: center;
      font-family: Arial, sans-serif;
    }
    canvas {
      background: #eee;
      border: 3px solid #000;
      margin-top: 10px;
    }
    #instructions {
      margin: 10px 0;
    }
  </style>
</head>
<body>

<h1>ðŸ¥Š Simple Boxing Game</h1>
<div id="instructions">Press A to Punch, D to Block, R to Restart</div>
<canvas id="game" width="600" height="300"></canvas>

<script>
const canvas = document.getElementById("game");
const ctx = canvas.getContext("2d");

let playerHealth = 100;
let enemyHealth = 100;
let blocking = false;
let gameOver = false;

function drawBoxer(x, color) {
  ctx.fillStyle = color;
  ctx.fillRect(x, 120, 40, 80); // body
  ctx.fillRect(x + 5, 100, 30, 20); // head
}

function drawHealth() {
  // Player health (blue)
  ctx.fillStyle = "blue";
  ctx.fillRect(50, 20, playerHealth * 2, 10);
  
  // Enemy health (red)
  ctx.fillStyle = "red";
  ctx.fillRect(350, 20, enemyHealth * 2, 10);
}

function enemyAttack() {
  if (gameOver) return;
  if (Math.random() < 0.6) {
    if (!blocking) playerHealth -= 10;
  }
}

function checkWin() {
  if (playerHealth <= 0) {
    gameOver = true;
    alert("You lost! ðŸ’¥");
  } else if (enemyHealth <= 0) {
    gameOver = true;
    alert("You win! ðŸ†");
  }
}

document.addEventListener("keydown", e => {
  if (gameOver && e.key === "r") {
    // Restart game
    playerHealth = 100;
    enemyHealth = 100;
    gameOver = false;
  } else if (!gameOver) {
    if (e.key === "a") {
      // Punch
      enemyHealth -= 10;
      enemyAttack();
      checkWin();
    } else if (e.key === "d") {
      // Block
      blocking = true;
    }
  }
});

document.addEventListener("keyup", e => {
  if (e.key === "d") blocking = false;
});

function gameLoop() {
  ctx.clearRect(0, 0, canvas.width, canvas.height);

  drawBoxer(100, "blue");   // Player
  drawBoxer(450, "red");    // Enemy
  drawHealth();

  requestAnimationFrame(gameLoop);
}

gameLoop();
</script>

</body>
</html>
